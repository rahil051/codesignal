{
    "compilerOptions": {
      "allowJs": true,
      "lib": ["deno.window"],
      "strict": false
    },
    "lint": {
      "files": {
        "include": ["src/"]
      },
      "rules": {
        "tags": ["recommended"],
        "include": ["ban-untagged-todo"],
        "exclude": ["no-unused-vars"]
      }
    },
    "fmt": {
      "files": {
        "include": ["src/"]
      },
      "options": {
        "useTabs": true,
        "lineWidth": 80,
        "indentWidth": 2,
        "singleQuote": true,
        "proseWrap": "preserve"
      }
    }
  }